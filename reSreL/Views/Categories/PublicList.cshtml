@model IEnumerable<reSreLData.Models.Categorie>

@{
    ViewData["Title"] = "📁 Toutes les catégories";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
        <h2 class="fw-bold text-primary">@ViewData["Title"]</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Aucune catégorie disponible.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var categorie in Model)
            {
                <div class="col">
                    <div class="card category-card h-100 border-0 shadow-sm rounded-4 bg-light">
                        <div class="card-body d-flex flex-column p-4">
                            <h4 class="card-title fw-semibold text-dark mb-2">
                                🏷️ @categorie.Nom
                            </h4>

                            <p class="card-text text-muted mb-4">
                                Découvrez les ressources associées à cette catégorie.
                            </p>

                            <div class="mt-auto">
                                <a asp-controller="Categories"
                                   asp-action="Details"
                                   asp-route-id="@categorie.Id"
                                   class="btn btn-primary w-100">
                                    🔍 Voir les ressources
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Styles personnalisés -->
<style>
    .category-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: linear-gradient(to right, #f8f9fa, #e9ecef);
    }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.08);
        }

    .card-title {
        font-size: 1.25rem;
    }
</style>
