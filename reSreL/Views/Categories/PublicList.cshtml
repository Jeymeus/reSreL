@model IEnumerable<reSreLData.Models.Categorie>

@{
    ViewData["Title"] = "📁 Toutes les catégories";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
        <h2 class="mb-0">@ViewData["Title"]</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Aucune catégorie disponible.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var categorie in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">🏷️ @categorie.Nom</h5>
                            <p class="card-text text-muted">Consultez les ressources associées à cette catégorie.</p>

                            <div class="mt-auto">
                                <a asp-controller="Categories"
                                   asp-action="Details"
                                   asp-route-id="@categorie.Id"
                                   class="btn btn-outline-primary btn-sm w-100">
                                    🔍 Voir les ressources
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
