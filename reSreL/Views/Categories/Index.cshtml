@model IEnumerable<reSreLData.Models.Categorie>

@{
    ViewData["Title"] = "Catégories";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">➕ Ajouter une catégorie</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Aucune catégorie enregistrée pour le moment.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">📁 Nom</th>
                        <th scope="col" style="width: 150px;">⚙️ Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nom</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">👁 Voir</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑 Supprimer</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
