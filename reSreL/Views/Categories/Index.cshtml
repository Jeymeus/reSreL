@model IEnumerable<reSreLData.Models.Categorie>

@{
    ViewData["Title"] = "Catégories";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<a asp-action="Create" class="btn btn-primary mb-3">➕ Ajouter une catégorie</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nom</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑 Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
