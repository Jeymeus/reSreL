@model reSreL.Models.Categorie

@{
    ViewData["Title"] = "Détails de la catégorie";
}

<h1>@Model.Nom</h1>

<hr />

<h4>Informations</h4>
<dl class="row">
    <dt class="col-sm-2">Nom</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Nom)</dd>
</dl>

<hr />

<h4>Ressources liées</h4>

@if (Model.Ressources != null && Model.Ressources.Any())
{
    <ul class="list-group">
        @foreach (var ressource in Model.Ressources)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @ressource.Nom
                <a class="btn btn-sm btn-outline-primary" asp-controller="Ressources" asp-action="Details" asp-route-id="@ressource.Id">Voir</a>
            </li>
        }
    </ul>
}
else
{
    <div class="alert alert-info mt-2">
        Aucune ressource liée à cette catégorie.
    </div>
}

<hr />
<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Retour à la liste</a>
</div>
