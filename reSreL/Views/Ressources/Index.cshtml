@model IEnumerable<reSreLData.Models.Ressource>

@{
    ViewData["Title"] = "Liste des ressources";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<a asp-action="Create" class="btn btn-primary mb-3">➕ Ajouter une ressource</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nom</th>
            <th>Type</th>
            <th>Lien</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nom</td>
                <td>@item.Type</td>
                <td><a href="@item.Lien" target="_blank">@item.Lien</a></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑</a>
                </td>
            </tr>
        }
    </tbody>
</table>
