@model IEnumerable<reSreLData.Models.Ressource>

@{
    ViewData["Title"] = "📚 Toutes les ressources";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- Barre de filtre -->
    <form method="get" class="mb-4">
        <div class="row gy-2 gx-3 align-items-end">
            <div class="col-md-5">
                <input type="text" name="search" value="@ViewBag.Search"
                       class="form-control" placeholder="🔍 Rechercher une ressource..." />
            </div>
            <div class="col-md-4">
                <select name="categorieId" class="form-select">
                    <option value="">📁 Toutes les catégories</option>
                    @foreach (var cat in ViewBag.Categories as List<reSreLData.Models.Categorie>)
                {
                    var selectedAttr = ViewBag.CategorieId != null && (int)ViewBag.CategorieId == cat.Id
                        ? "selected"
                        : "";
                    @:<option value="@cat.Id" @selectedAttr>@cat.Nom</option>
                }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">Filtrer</button>
            </div>
        </div>
    </form>

    <!-- Cartes de ressources -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        @foreach (var ressource in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@ressource.Nom</h5>
                        <p class="mb-1"><strong>Type :</strong> @ressource.Type</p>
                        <p class="mb-1"><strong>Ajouté par :</strong> @ressource.User?.Prenom</p>
                        <p class="mb-2">
                            <strong>Catégories :</strong><br />
                            @foreach (var cat in ressource.Categories)
                            {
                                <span class="badge bg-primary me-1">@cat.Nom</span>
                            }
                        </p>
                        <div class="mt-auto">
                            <a asp-controller="Ressources"
                               asp-action="Details"
                               asp-route-id="@ressource.Id"
                               class="btn btn-outline-primary w-100">
                                🔍 Voir la ressource
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
