@model reSreLData.Models.User

@{
    ViewData["Title"] = "Mon Profil";
}

<div class="card shadow-lg rounded-4" style="max-width: 520px; margin: auto;">
    <div class="card-header text-white text-center rounded-top-4 py-3" style="background-color: #0b5ed7; font-size: 1.5rem;">
        <h3 class="mb-0"><i class="bi bi-person-circle me-2"></i>Mon Profil</h3>
    </div>
    <div class="card-body bg-light py-4 px-4" style="font-size: 1rem;">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-semibold mb-2"><i class="bi bi-person-fill"></i> Nom</dt>
            <dd class="col-sm-8 mb-3">@Model.Nom</dd>

            <dt class="col-sm-4 fw-semibold mb-2"><i class="bi bi-person"></i> Prénom</dt>
            <dd class="col-sm-8 mb-3">@Model.Prenom</dd>

            <dt class="col-sm-4 fw-semibold mb-2"><i class="bi bi-envelope-fill"></i> Email</dt>
            <dd class="col-sm-8 mb-3">@Model.Email</dd>

            <dt class="col-sm-4 fw-semibold mb-2"><i class="bi bi-shield-lock-fill"></i> Rôle</dt>
            <dd class="col-sm-8 mb-0">@Model.Role</dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-center gap-3 py-3">
        <a class="btn btn-primary btn-md" asp-action="EditProfil">
            <i class="bi bi-pencil-square"></i> Modifier le profil
        </a>
        <a class="btn btn-warning btn-md text-dark" asp-action="ChangePassword">
            <i class="bi bi-key-fill"></i> Changer le mot de passe
        </a>
    </div>
</div>