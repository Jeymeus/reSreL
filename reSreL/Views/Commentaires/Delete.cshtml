@model reSreLData.Models.Commentaire

@{
    ViewData["Title"] = "🗑️ Supprimer le commentaire";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <p class="mb-4">Êtes-vous sûr de vouloir supprimer ce commentaire ?</p>

                    <dl class="row">
                        <dt class="col-sm-4">📝 Contenu</dt>
                        <dd class="col-sm-8">@Model.Contenu</dd>

                        <dt class="col-sm-4">📅 Date de création</dt>
                        <dd class="col-sm-8">@Model.DateCreation.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">📌 Statut</dt>
                        <dd class="col-sm-8">@((Model.Valide) ? "✅ Validé" : "⏳ En attente")</dd>

                        <dt class="col-sm-4">👤 Utilisateur</dt>
                        <dd class="col-sm-8">@Model.Utilisateur?.Email</dd>

                        <dt class="col-sm-4">🔗 Ressource liée</dt>
                        <dd class="col-sm-8">@Model.Ressource?.Lien</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="d-flex flex-wrap gap-2 mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">🗑️ Supprimer définitivement</button>
                        <a asp-action="Index" class="btn btn-secondary">↩️ Annuler</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
